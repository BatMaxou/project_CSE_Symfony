{% extends "page.html.twig" %}

{% block title %}
	CSE - Contact
{% endblock %}

{% block content %}
	<div id="contact">
		<h1>Contactez-nous</h1>
		<div class="card">
			<div class="contact-flex">
				<div class="contact-img">
					<img src="{{ asset('images/lyceestvincent.png') }}" alt="">
				</div>
				<div class="contact-header">
					<ul>
						<li>
							Par téléphone :
							<a href="tel:+33303030303">+33303030303</a>
						</li>
						<li>
							Par mail :
							<a href="mailto:cse@lyceestvincent.fr">cse@lyceestvincent.fr</a>
						</li>
						<li>
							Au lycée : Bureau du CSE (1er étage bâtiment Saint-Vincent)
						</li>
					</ul>
					<div class="contact-form">
						{{ form_start(formContact) }}

						{{ form_errors(formContact.name) }}
						{{ form_errors(formContact.firstname) }}
						{{ form_errors(formContact.email) }}
						{{ form_errors(formContact.message) }}
						{{ form_errors(formContact.consent) }}

						{{ form_label(formContact.name) }}
						{{ form_widget(formContact.name, {'attr': {'class': 'elementLogin', 'placeholder': 'Prénom'}}) }}

						{{ form_label(formContact.firstname) }}
						{{ form_widget(formContact.firstname, {'attr': {'class': 'elementLogin', 'placeholder': 'Nom'}}) }}

						{{ form_label(formContact.email) }}
						{{ form_widget(formContact.email, {'attr': {'class': 'elementLogin', 'placeholder': 'Adresse mail'}}) }}

						{{ form_label(formContact.message) }}
						{{ form_widget(formContact.message, {'attr': {'class': 'elementLogin', 'placeholder': 'Message'}}) }}

						<div class="form-contact-checkbox">
							{{ form_widget(formContact.consent) }}
							{{ form_label(formContact.consent) }}
						</div>

						<div class="form-contact-checkbox">
							<input type="checkbox" name="consent" id="newsletterConsentFormContact">
							<label for="newsletterConsentFormContact">Je m'inscrit à la newsletter pour recevoir par mail les nouvelles offres</label>
						</div>

						<div class="form-contact-checkbox">
							{{ form_widget(formContact.captcha) }}
							{{ form_label(formContact.captcha) }}
						</div>

						{{ form_row(formContact.submit, {'attr': {'class': 'submitLogin'}}) }}

						{{ form_end(formContact) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
