<div class="paging-container">
	{% if nbPage > 0 %}
		<div class="paging-element">
			<img class="previous" src="{{ asset('images/slider-arrow-left.svg')}}" alt="left-arrow">
		</div>
		{% if nbPage <= 5 %}
			{% for i in 1..nbPage %}
				{% if i == 1 %}
					<div class="paging-element paging-element-active">
						<span>{{ i }}</span>
					</div>
				{% else %}
					<div class="paging-element">
						<span>{{ i }}</span>
					</div>
				{% endif %}
			{% endfor %}
		{% else %}
			{% set btnContent = 1 %}
			{% for i in 1..5 %}
				{% if i == 3 %}
					<div class="paging-element">
						<span>...</span>
						<div class="paging-select">
							{% for j in 1..nbPage %}
								<p>{{ j }}</p>
							{% endfor %}
						</div>
					</div>
					{% set btnContent = nbPage - 1 %}
				{% else %}
					{% if i == 1 %}
						<div class="paging-element paging-element-active">
							<span>{{ btnContent }}</span>
						</div>
					{% else %}
						<div class="paging-element">
							<span>{{ btnContent }}</span>
						</div>
					{% endif %}
					{% set btnContent = btnContent + 1 %}
				{% endif %}
			{% endfor %}
		{% endif %}
		<div class="paging-element">
			<img class="next" src="{{ asset('images/slider-arrow-right.svg')}}" alt="left-arrow">
		</div>
	{% endif %}
</div>
