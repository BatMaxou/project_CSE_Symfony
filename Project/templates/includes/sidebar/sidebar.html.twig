{% block sidebar %}
	<div class="sidebar">
		<div class="sidebar-flex">
			<div class="sidebar-survey">
				<h2>Votre avis compte</h2>
				<div class="flash">
					<span class="closebtn" onclick="close()">&times;</span>
					<strong>Information !</strong>
					<div class="message"></div>
				</div>
				{{form_start(form)}}
				<legend>{{ question.questionSurvey }}</legend>
				{% for item in response %}
					<div class="response">
						<input type="radio" id="radio_{{item.idResponse}}" name="radio_response" value="{{ item.textResponse }}">
						<label for="radio_{{item.idResponse}}">{{ item.textResponse }}</label>
					</div>
				{% endfor %}
				<button type="submit">Envoyer ma réponse</button>
				{{form_end(form)}}
			</div>
			<div class="sidebar-access">
				<h2>Accés rapide</h2>
				<ul>
					<li><ahref="{{path("ticketing")}}">Offres permanentes / Billeterie</a></li>
					<li><ahref="{{path("contact")}}">Nous contacter</a></li>
				</ul>
			</div>
			<div class="sidebar-contact">
				<h2>Informations de contact</h2>
				<ul>
					<li>
						Par téléphone :
						<a href="tel:+33303030303">+33303030303</a>
					</li>
					<li>
						Par mail :
						<a href="mailto:cse@lyceestvincent.fr">cse@lyceestvincent.fr</a>
					</li>
					<li>
						Au lycée : Bureau du CSE - 1er étage bâtiment Saint-Vincent
					</li>
				</ul>
			</div>
			<div class="sidebar-slider">
				<h2>Nos partenaires</h2>
				<div class="slider">
					{% for item in image %}
						<div class="slider-image">
							<img src="{{ asset("imagesTest/" ~ item.image_partnership) }}">
						</div>
					{% endfor %}
					<img class="prev" src="{{ asset("images/slider-arrow-left.svg") }}" alt="arrow direction slider">
					<img class="next" src="{{ asset("images/slider-arrow-right.svg") }}" alt="arrow direction slider">
				</div>
				<p>
					<a href="{{ path("partnership") }}">Découvrir tous nos partenaires</a>
				</p>
				{% block javascripts %}
					<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
					<script src="{{ asset('js/slider.js') }}"></script>
				{% endblock %}
			</div>
		</div>
	</div>
{% endblock %}
