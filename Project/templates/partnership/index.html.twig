{% extends "page.html.twig" %}

{% block content %}
	{% if partnerships %}
		<div id="partnership">
			<h2>Partenariats</h2>
			{% for partnership in partnerships %}
				<div class="card">
					<div class="card-body">
						<div class="card-image">
							<img src="{{ asset('imagesTest/' ~ partnership.imagePartnership) }}" alt="{{ partnership.imagePartnership }}">
						</div>
						<div class="card-content">
							<h3>{{ partnership.namePartnership }}</h3>
							<p>{{ partnership.descriptionPartnership }}</p>
						</div>
					</div>
					<div class="card-footer">
						<a href="{{ partnership.linkPartnership }}" target="_blanck">
							<p>Consulter le site du partenaire</p>
							<img src="{{ asset('images/left-chevron.svg')}}" alt="chevron">
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endif %}
{% endblock %}
