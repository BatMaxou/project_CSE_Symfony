{% extends 'page.html.twig' %}

{% block content %}
	<div id="aboutus">
		<h2 class="title-about-us">A propos de nous</h2>

		{% block modal %}
			{% include "includes/_modal.html.twig" with {
				title: 'Règlement du CSE', 
				content: rules, 
				options: {
					texteFooter: "
					<div>
						<p>
							Pour toutes informations supplémentaires, veuillez nous contacter à l'adresse mail :
						</p>"
						~ email ~ 
					"</div>", 
					suppButton: false, 
					modifButton: false
				}
			} %}
		{% endblock %}

		<div class="card">
			<div class="card-header">
				<h3>Membres</h3>
			</div>
			<div class="card-body">
				<div class="members-container">
					{% for member in members %}
						<div class="profil">
							<div class="member-profil-container">
								<img src="{{ asset('imagesTest/' ~ member.profil)}}" alt="Membre">
							</div>
							<div class="member-infos">
								<h3>{{ member.firstName ~ ' ' ~ member.lastName}}</h3>
								<p>{{ member.function }}</p>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<h3>Actions menées par le CSE</h3>
				<button class="modal-open">Voir le règlement</button>
			</div>
			<div class="card-body">
				<p>{{ actions|raw }}</p>
			</div>
		</div>
	</div>

	<script src="{{ asset('js/modal.js') }}"></script>
{% endblock %}
